---
import Layout from "../layouts/Layout.astro";
import "../styles/theme.css";
import {Content as Links} from '../content/linky/linky.mdx'
---

<Layout title="Uzitocne linky">
    <div class="page-wrapper">
        <h1>Uzitocne Linky</h1>

        <Links/>
    </div>

</Layout>

<style>
    .title {
        display: flex;
        align-items: start;
    }

    .page-wrapper {
        display: flex;
        flex-direction: column;
        align-items: start;
    }

    h1 {
        font-size: 3.5rem;
        color: var(--accent-dark);
    }

    @media screen and (max-width: 940px) {
        .page-wrapper {
            display: flex;
            min-width: 80vw;
            max-width: 90vw;
        }
    }

</style>