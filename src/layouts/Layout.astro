---
import Header from "../components/navigation/Header.astro";
import Footer from "../components/navigation/Footer.astro";
import { ViewTransitions } from "astro:transitions";
import "../styles/theme.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <ViewTransitions />
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Oficiánla internetová stránka Slovenskej Asociácie Štítnej Žľazy"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/sz_logo_mono.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <Header />
  <body>
    <div class="page-content">
      <slot />
    </div>
  </body>
  <Footer />

  <style is:global>
    .page-content {
      max-width: 1440px;
      padding-left: 10rem;
      padding-right: 10rem;
      display: flex;
      justify-content: start;
      align-items: center;
      flex-direction: column;

      min-height: 100vh;
    }

    body {
      justify-content: center;
      margin-top: 3rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      background: #fbfafd;
    }

    html {
      font-family: system-ui, sans-serif;
      background: white;
      margin: 0px;
    }

    @media screen and (min-width: 768px) {
      .page-content {
        padding: 0 2rem;
      }
    }

    @media screen and (min-width: 1024px) {
      .page-content {
        padding: 0 4rem;
      }
    }

    Header,
    Footer {
      width: 100%;
    }

    code {
      font-family:
        Menlo,
        Monaco,
        Lucida Console,
        Liberation Mono,
        DejaVu Sans Mono,
        Bitstream Vera Sans Mono,
        Courier New,
        monospace;
    }
  </style>
</html>
