---
import Button from "../../components/Button.astro";

const { title, body, image } = Astro.props;
---

<script>
  const btn = document.querySelector(".button-wrapper");

  if (btn != null) {
    btn.addEventListener("click", () => {
      console.log("click");
    });
  }
</script>

<div class="home-card">
  <div class="image-wrapper"><img src={image} alt="card-image" /></div>
  <div class="text-wrapper">
    <div class="title">
      <div class="title-rec">
        <span class="title-span">
          {title}
        </span>
      </div>
    </div>
    <p>{body}</p>
  </div>
  <div class="slot-wrapper">
    <slot />
  </div>
  <!-- {
      button && (
        <div class="button-wrapper">
          <Button buttonText={buttonText} class="btn" />
        </div>
      )
    } -->
</div>

<style>
  .home-card {
    display: flex;
    width: 100%;
    max-width: 28rem;
    min-height: 32rem;
    padding: var(--spacing-lg);
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: var(--spacing-md);
    border-radius: 1rem;
    background: #fff;
    box-shadow: 0px 6px 21px 0px rgba(0, 0, 0, 0.1);
    transition: all 0.5s ease-in-out;
  }

  .home-card:hover .title-rec {
    height: 1.3rem;
  }

  .home-card:hover {
    box-shadow: 0px 8px 24px 0px rgba(0, 0, 0, 0.17);
  }

  .image-wrapper {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .image-wrapper img {
    width: 100%;
    max-width: 18.71875rem;
    height: auto;
    aspect-ratio: 1.18/1;
    object-fit: contain;
  }

  .text-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: var(--spacing-md);
    width: 100%;
  }

  .title-rec {
    display: inline-flex;
    align-items: flex-end;
    width: fit-content;
    height: 0.5rem;
    background-color: var(--accent-light);
    transition: height 0.3s ease-in-out;
  }

  .title-rec span {
    font-size: var(--text-xl);
    font-weight: 700;
  }

  .text-wrapper h2 {
    color: #22252b;
    font-size: var(--text-xl);
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }

  .text-wrapper p {
    width: 100%;
    max-width: 22rem;
    text-align: center;
    font-size: var(--text-base);
  }

  .slot-wrapper {
    margin: var(--spacing-md);
    width: 100%;
  }

  @media screen and (max-width: 480px) {
    .home-card {
      min-height: 24rem;
    }
  }
</style>
