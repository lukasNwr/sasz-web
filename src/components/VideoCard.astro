---
const { description } = Astro.props;
---

<div class="video-card">
    <div class="video-wrapper">
        <iframe class="video" src="https://www.youtube.com/embed/BlXmZEo7ouM" title="ŠPECIALISTI - Všetko čo potrebujete vedieť o vyšetrení u endokrinológa" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    </div>
    <p class="video-description">{description}</p>
</div>

<style>
    .video-description {
        font-size: 1rem;
        font-weight: 500;
        margin-top: 1rem;
    }

    .video-card {
        width: 30%;
        max-height: 25rem;
        min-height: 15rem;
        background-color: blue;
        border-radius: 10px;
        overflow: hidden;
        padding: 5px;
        
    }

    .video-wrapper {
        position: relative;
        padding-bottom: 56.25%;
        border-radius: 5px;
        overflow: hidden;
    }

    .video-wrapper iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: 0;
    }

</style>