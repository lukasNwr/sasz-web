---
import "../../styles/theme.css";
import { FaChevronDown } from "react-icons/fa";
import { FaChevronUp } from "react-icons/fa";
const { title } = Astro.props;
---

<script>
  //@ts-ignore
  //@ts-nocheck

  const accordionTitles = document.querySelectorAll(".accordion-label");

  accordionTitles.forEach((accordionTitle: HTMLElement) => {
    if (accordionTitle != null) {
      accordionTitle.addEventListener("click", () => {
        const contentHeight = accordionTitle.nextElementSibling.scrollHeight;
        accordionTitle.classList.toggle("active");
        if (accordionTitle.classList.contains("active")) {
          accordionTitle.nextElementSibling.style.maxHeight = `${contentHeight}px`;
        } else {
          accordionTitle.nextElementSibling.style.maxHeight = `0px`;
        }
      });
    }
  });
</script>

<div class="accordion">
  <div class="accordion-label">
    <span class="accordion-title">
      {title}
    </span>
  </div>
  <div class="accordion-content">
    <slot />
  </div>
  <hr />
</div>

<style>
  @keyframes changeChevronDownToUp {
    0%: {
      content: url("../../../public/chevron-down1x.png");
    }
    100%: {
      content: url("../../../public/chevron-up1x.png");
    }
  }

  .accordion-title {
    font-size: 2rem;
    font-weight: 600;
  }

  .accordion {
    padding-block: 1rem;
    padding-inline: 3rem;
    transition: all 0.5s ease;
  }

  .accordion-label {
    width: 100%;
    padding: 10px 0;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .accordion-label::after {
    content: url("../../../public/chevron-down1x.png");
    transition: all 0.5s ease;
  }

  .accordion-label.active::after {
    content: url("../../../public/chevron-up1x.png");
  }

  .accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s ease;
  }

  .accordion:has(.accordion-label.active) {
    background-color: white;
    box-shadow: 0px 4px 18px 0px rgba(80, 80, 80, 0.1);
    border-radius: 1rem;
    padding-top: 2rem;
    padding-bottom: 2.5rem;
    padding-inline: 3.2rem;
  }

  .accordion:has(.accordion-label.active) hr {
    display: none;
  }

  .accordion hr {
    border: 0;
    height: 1px;
    background: var(--fg-light-ex);
    opacity: 0.4;
  }


  .sources {
    display: flex;
    flex-direction: column;
    margin: 1rem 0;
  }

  .link {
    margin: 0.3rem 0;
  }

  @media screen and (max-width: 940px) {
    .accordion-title {
      font-size: 1.5rem;
      font-weight: 600;
    }


  }

  @media screen and (max-width: 720px) {
    .accordion-title {
      font-size: 1.2rem;
      font-weight: 600;
    }


  }
</style>
