---
const { title } = Astro.props;
---

<script>
  //@ts-ignore
  //@ts-nocheck

  const accordionTitles = document.querySelectorAll(".accordion-label");

  accordionTitles.forEach((accordionTitle: HTMLElement) => {
    if (accordionTitle != null) {
      accordionTitle.addEventListener("click", () => {
        const contentHeight = accordionTitle.nextElementSibling.scrollHeight;
        accordionTitle.classList.toggle("active");
        if (accordionTitle.classList.contains("active")) {
          accordionTitle.nextElementSibling.style.maxHeight = `${contentHeight}px`;
        } else {
          accordionTitle.nextElementSibling.style.maxHeight = `0px`;
        }
      });
    }
  });
</script>

<div class="accordion">
  <div class="accordion-label">
    <span>
      {title}
    </span>
  </div>
  <div class="accordion-content">
    <slot />
  </div>
</div>

<style>
  .accordion-label {
    padding: 10px 0;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .accordion-label::after {
    content: "+";
  }

  .active .accordion-label::after {
    content: "-";
  }

  .accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s ease;
  }

  .sources {
    display: flex;
    flex-direction: column;
    margin: 1rem 0;
  }

  .link {
    margin: 0.3rem 0;
  }
</style>
